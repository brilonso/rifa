<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="rifa.InterfaceController">
    <children>
      <TabPane prefHeight="411.0" prefWidth="379.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Inicio">
               <content>
                  <Pane prefHeight="350.0" prefWidth="340.0">
                     <children>
                        <Label layoutX="125.0" layoutY="14.0" prefHeight="19.0" prefWidth="131.0" text="Programa para Rifa" />
                        <Label layoutX="80.0" layoutY="49.0" prefHeight="16.0" prefWidth="208.0" text="Escoja la cantidad de digitos" />
                        <ComboBox fx:id="digitos" layoutX="115.0" layoutY="84.0" prefWidth="150.0" promptText="Digitos" />
                        <Label contentDisplay="CENTER" layoutX="14.0" layoutY="145.0" prefHeight="51.0" prefWidth="352.0" text="Numero de final (introduzca el numero sin 0 delante ej: 99)" textAlignment="CENTER" textOverrun="CLIP" wrapText="true" />
                        <TextField fx:id="fin" layoutX="99.0" layoutY="206.0" />
                        <Button fx:id="generar" layoutX="131.0" layoutY="262.0" mnemonicParsing="false" onAction="#GenerarTabla" prefHeight="24.0" prefWidth="107.0" text="Generar" />
                     </children>
                  </Pane>
               </content>
            </Tab>
          <Tab text="2 Digitos">
               <content>
                  <TableView fx:id="box" prefHeight="200.0" prefWidth="200.0">
                    <columns>
                      <TableColumn id="num" fx:id="numero" prefWidth="75.0" text="Numero" />
                      <TableColumn id="nombre" prefWidth="75.0" text="Nombre" />
                    </columns>
                  </TableView>
               </content></Tab>
            <Tab text="3 Digitos">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TableView fx:id="box3" layoutX="1.0" layoutY="-1.0" prefHeight="381.0" prefWidth="379.0">
                          <columns>
                            <TableColumn fx:id="numero3" prefWidth="75.0" text="Numero" />
                            <TableColumn fx:id="nombre3" prefWidth="75.0" text="Nombre" />
                          </columns>
                        </TableView>
                     </children>
                  </AnchorPane>
              </content>
            </Tab>
        </tabs>
      </TabPane>
    </children>
</AnchorPane>
